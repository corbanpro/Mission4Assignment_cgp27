@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeCalcModel;

<!--Grade Calculator-->
<form method="post">
    <label>Assignments</label>
    <input type="number" id="assignments" asp-for="assignments"  step="any"/> <br />
    <label>Group Projects</label>
    <input type="number" id="group_projects" asp-for="group_projects"  step="any"/> <br />
    <label>Quizzes</label>
    <input type="number" id="quizzes" asp-for="quizzes"  step="any"/> <br />
    <label>Midterm Exam</label>
    <input type="number" id="midterm" asp-for='midterm'  step="any"/> <br />
    <label>Final Exam</label>
    <input type="number" id="final" asp-for="final"  step="any"/> <br />
    <label>INTEX</label>
    <input type="number" id="intex" asp-for="intex"  step="any"/> <br />
    <input type="submit" id="calculate" value="Calculate Grade" />
</form>

<!--Show model validation summary-->
<div asp-validation-summary="All"></div>

<p id="finalGrade"></p>